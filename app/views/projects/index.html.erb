<% title "Projects" %>

<%= menu_bar do |mb|
    mb.menu_line "Create new Project", new_project_path
end %>


<% info_box ('projects/info_box_project') %>


<%= header("Your current Projects") %>

<% if @projects.nil? or @projects.count==0 then %>
<p> No Project created!</p>
<p style="font-weight:bold;"> Check out the Online-Help below. Just follow the steps described to set-up your project and start tracking !</p>
<%else%>
<table style='width:100%'>
  <tr>
    <th style="text-align:left;">Name</th>
    <th style="text-align:left;">Description</th>
    <th>PM</th>
    <% if is_admin? %>
        <th>Organization</th>
    <% end %>
        <th></th>

  </tr>
  <% for project in @projects %>
      <tr>
        <td style="text-align:left;"><%= link_to project.name, project %></td>
        <td style="text-align:left;"><%= h project.description %></td>
        <td><%= h project.pm.username %></td>
        <% if is_admin? %>
            <td><%= h project.organization.name %></td>
<% end %>
            <td><%= link_to "Edit", edit_project_path(project) %></td>



      </tr>
  <% end %>
</table>
  <% end %>
<p><%= link_to "New Project", new_project_path  if is_admin? %></p>
